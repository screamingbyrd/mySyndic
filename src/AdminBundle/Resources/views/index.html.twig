{% extends "AppBundle::layout.html.twig" %}

{% block title %}
    Panneau d'administration - {{ parent() }}
{% endblock %}

{% block body %}


    <div class="container jobnow-container" style="text-align: center">

        <div class="dashboard-container">
            <div class="container-square">
                <a class="zoom block-dashboard square-profile" href="{{ path('list_owner_admin') }}"><div class="content-square"><i class="fas fa-building"></i><div class="text-square">{{ 'admin.dashboard.ownerList' | trans }}</div></div></a>
                <a class="zoom block-dashboard square-credit" href="{{ path('list_ad_admin',{'archived':0}) }}"><div class="content-square"><i class="fas fa-euro-sign"></i><div class="text-square">{{ 'admin.dashboard.adList' | trans }}</div></div></a>
                <a class="zoom block-dashboard square-featured-owners" href="{{ path('list_admin') }}"><div class="content-square"><i class="fas fa-wrench"></i><div class="text-square">{{ 'admin.dashboard.adminList' | trans }}</div></div></a>
            </div>
        </div>


        <p></p>
        <div class="dashboard-total-offer">
            {{ 'admin.dashboard.totalOwners' | trans }} {{ countOwner }}
        </div>

    </div>

{% endblock %}